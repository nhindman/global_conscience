<div class="twelve columns offset-by-one">
  <img src="assets/<%= @edit_comment.country %>.png" class="maps">
</div><br><br>

  <div class="eight columns offset-by-three">
    <form action="/posts/update/" method="POST" >
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
      <input type="hidden" name="comment_id" value="<%= @edit_comment.id %>" />
      <input type="text" name="title" placeholder="<%= @edit_comment.title %>" /> <br>
      <textarea name="body"><%= @edit_comment.body %>
      </textarea> <br>
      <input type="submit" value="submit changes" />
    </form>
  </div>