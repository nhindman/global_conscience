<img src="/assets/<%= @country %>.png">

<p><%= @warning_title %></p><br>
<p><%= @warning_body %></p>
<% if @woeid_trends == "oops" %>
  <h1><%= @statement %></h1>
<% else %>
  <h2><%= @statement %></h2>
  <% @woeid_trends.each do |tweet| %>
    <a href="<%= tweet[:url]%>" target="_blank"><%= tweet[:name] %></a><br>
  <% end %>
<% end %>




<!-- blog section -->
<% if user_signed_in? %>
  <form action="/posts/create/" method="POST" <%= token_tag :authenticity_token %>>
    <input type="hidden" name="warning_id" value="<%= @warning_id %>"/>
    <input type="hidden" name="country" value="<%= @country %>">
    <input type="text" name="title" placeholder="Title" /><br>
    <textarea name="body" placeholder="comment"></textarea><br>
    <input type="submit" value="post" class="submit" />
  </form>
<!-- display all -->
  <% @comments.each do |comment| %>
    <h1><%= comment.title %></h1>
    <p><%= comment.body %></p>
    <!-- <p>by <a href="/posts/user/all<%=  %>"><%= post.user.name %></a></p> -->
    <p>created <%= comment.created_at %></p>


  <!-- edit/delete -->
    <% if User.name == comment.username %>
      <form action="/posts/delete/<%= comment.id %>" method="POST" >
        <input type="hidden" name="country" value="<%= @country %>">
        <button>delete</button>
      </form>
      <form action="/posts/edit/<%= comment.id %>" method="get">
        <input type="hidden" name="country" value="<%= @country %>">
        <button>edit</button>
      </form>
    <% else %>
      <p></p>
    <% end %>
  <% end %>
<!-- login -->
<% else %>
  <%= link_to "Sign in with Facebook to leave comments", user_omniauth_authorize_path(:facebook) %>
<% end %>
